```env
# =========================
# Telegram API credentials
# Get here â†’ https://my.telegram.org
# =========================

API_ID=1234567
API_HASH=your_api_hash_here


# =========================
# Target channel (where messages will be forwarded)
# Can be:
# - @username
# - channel link
# - numeric ID
# =========================

TARGET_CHANNEL=username


# =========================
# Channels to fully forward (no filtering)
# Comma-separated usernames
# =========================

FULL_FORWARD_CHANNELS=Channel_1,Channel_2,Channel_3


# =========================
# Channel with message filtering enabled
# Messages will be forwarded ONLY if they pass filter rules
# =========================

FILTERED_CHANNEL=Channel_name


# =========================
# Reconnect delay (seconds)
# If connection drops
# =========================

RECONNECT_DELAY=5


# =========================
# Telethon session file name
# .session file will be created locally
# =========================

SESSION_NAME=forwarder_session
```
